# Run the container with `docker run -p 3000:3000 -t wenab-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system wenab-api && \
          adduser --system -G wenab-api wenab-api

COPY apps/wenab-api/dist wenab-api/
RUN chown -R wenab-api:wenab-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix wenab-api --omit=dev -f install

CMD [ "node", "wenab-api" ]
